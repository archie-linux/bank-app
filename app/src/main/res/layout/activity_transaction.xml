<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- TextView at the top -->
    <TextView
        android:id="@+id/accountTypeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Header Text"
        android:textColor="#A9A9A9"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/accountNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountTypeTextView"
        android:text="Header Text"
        android:textSize="15sp"
        android:textColor="#A9A9A9"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/accountBalanceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountNumberTextView"
        android:text="Header Text"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/availableBalanceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountBalanceTextView"
        android:text="Available balance"
        android:textColor="#A9A9A9"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold"
        android:padding= "5sp" />

    <TextView
        android:id="@+id/recentTransactionsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/availableBalanceTextView"
        android:text="Recent Transactions"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:padding= "7sp" />


    <!-- ListView below TextView -->
    <ListView
        android:id="@+id/accountTransactionsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recentTransactionsTextView"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        />



</RelativeLayout>